<% form_for([purchase, line_item]) do |f| %>
  <%= f.error_messages %>

  <p> 
    <%= f.label :product_id %><br /> 
    <%= f.collection_select :product_id, Product.all, :id, :name, :prompt => true %>
  </p> 
  <p>
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %> 
  </p>
  <p> 
    <%= f.label :cost %><br /> 
    <%= f.text_field :cost %>
  </p>
  <p>
    <%= f.submit button_label %>
  </p>
<% end %> 

<%= link_to 'Back', purchase %>

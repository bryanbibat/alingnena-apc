<h1>New debt</h1>

<% form_for(@debt) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :item %><br />
    <%= f.text_area :item %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p> 
    <%= f.label :remarks %><br /> 
    <%= f.text_area :remarks %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', debts_path %>

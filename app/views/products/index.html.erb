<h1>Listing Products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Stock</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%=h product.name %></td>
    <td><%=h product.description %></td>
    <td><%=number_to_currency product.cost, :unit => 'PhP' %></td>
    <td><%=h product.stock %></td>
  </tr>
<% end %>

</table>

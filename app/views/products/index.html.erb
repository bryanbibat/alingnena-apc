<p style="color: green"><%= flash[:notice] %></p>

<% form_tag(search_products_url, {:method => :get} ) do %>
  <%= label_tag("name", "Search by product name:") %>
  <%= text_field_tag("name") %> <%= submit_tag("Search") %>
<% end %>

<h1>Listing Products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Stock</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%=h product.name %></td>
    <td><%=h product.description %></td>
    <td><%=number_to_currency product.cost, :unit => 'PhP' %></td>
    <td><%=h product.stock %></td>
    <td><%= link_to 'Show', product_url(product.id) %></td>
    <td><%= link_to 'Edit', edit_product_url(product) %></td>
  </tr>
<% end %>

</table>

<p><%= link_to "Create a new Product", new_product_url %></p>

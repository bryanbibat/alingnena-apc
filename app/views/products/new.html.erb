<h1>New Product</h1>

<% form_for(@product) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label(:name) %><br />
    <%= f.text_field(:name) %>
  </p>
  <p>
    <%= f.label(:description) %><br />
    <%= f.text_area(:description) %>
  </p>
  <p>
    <%= f.label(:cost) %><br />
    <%= f.text_field(:cost) %>
  </p>
  <p>
    <%= f.label(:stock) %><br />
    <%= f.text_field(:stock) %>
  </p>
  <p>
    <%= f.submit('Create') %>
  </p>
<% end %>

<%= link_to 'Back', products_url %>
